<h1>MealPlan <%= @meal_plan.date_range.min %> - <%= @meal_plan.date_range.max %> </h1>
<%= link_to "Destroy", meal_plan_path(@meal_plan),
             method: :delete,
             data: { confirm: "Are you sure?" } %>

<h2>Shopping list</h2>
<ul>
  <% @meal_plan.shopping_list_items.each do |shopping_list_item| %>
    <li>
      <%= shopping_list_item[:food_item_name] %>
      <%= shopping_list_item[:quantity] %>
      <%= shopping_list_item[:food_item_unit] %>
    </li>
  <% end %>
</ul>

<h2>Meals (<%= link_to "edit notes", edit_meal_plan_path(@meal_plan) %>)</h2>
<% @meal_plan.meal_plan_days.each do |meal_plan_day| %>
  <%= render meal_plan_day %>
<% end %>
